//===========고객센터 공지 테이블
CREATE TABLE t_notice (
   inotice INT UNSIGNED PRIMARY KEY AUTO_INCREMENT,
   notice_type VARCHAR(10) NOT NULL,
   notice_title VARCHAR(100) NOT NULL,
   notice_ctnt VARCHAR(3000) NOT NULL,
   notice_rdt DATETIME DEFAULT CURRENT_TIMESTAMP()
);

